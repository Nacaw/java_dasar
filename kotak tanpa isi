package helloworld;

// Below this comment: import the Scanner
import java.util.Scanner;
public class kotak_tanpa_isi {
   public static void main(String[] args) {
      // Below this comment: declare and instantiate a Scanner
      Scanner scnr = new Scanner(System.in);

      // Below this comment: declare any other variables you may need
      int width;
      int height;
      char border;
      char interior;
      int batas1;

      // Below this comment: collect the required inputs
      System.out.println("Enter width    : ");
      width = scnr.nextInt();
      System.out.println("Enter height   : ");
      height = scnr.nextInt();
      System.out.println("Enter border   : ");
      border = scnr.next().charAt(0);
      System.out.print("Enter interior : ");
      interior = scnr.next().charAt(0);

      batas1 = width+2;
      
      // Below this comment: display the required results
      
         for (int j = 0; j < 1; j++) {
           for (int i = 0; i < batas1; i++) {
            System.out.print(border);
            System.out.print(" ");
         }  
            System.out.println(" ");
         }
      
         
      for (int j = 0; j < height; j++) {
          
         for (int i = 0; i < 1; i++) {
            System.out.print(border);
            System.out.print(" ");
         }  
         
           for (int i = 0; i < width; i++) {
            System.out.print(interior);
            System.out.print(" ");
           }
           
           for (int i = width; i <= width; i++) {
            System.out.print(border);
           }

           System.out.println(" ");
      }
      
         for (int i = 0; i <= batas1; i++) {
            System.out.print(border);
            System.out.print(" ");
         }

      
   }
}
